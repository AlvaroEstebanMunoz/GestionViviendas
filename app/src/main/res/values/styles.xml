<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> -->
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Define the PopupOverlay theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize the popup theme here -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Define the PopupOverlay theme -->
    <style name="Mitoolbar" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize the popup theme here -->
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="background">@color/miFondo</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <color name="miFondo">#045C97</color>
    <color name="textColor">#000000</color>
    <color name="colorPrimary">#84A7BE</color>
    <color name="colorPrimaryDark">#D6A09C</color>
    <color name="colorAccent">#3B6CFF</color>
</resources>