    <!-- Fragmento de la lista de casas -->
    <fragment
        android:id="@+id/casasFragment"
        android:name="com.aem.gestionalquileres.fragmentos.CasasFragment"
        android:label="Lista de Casas"
        tools:layout="@layout/fragment_casas">
        <!-- Acción para navegar desde CasasFragment a ItemCasaFragment -->
        <action
            android:id="@+id/action_casasFragment_to_detalleCasaFragment"
            app:destination="@id/detalleCasaFragment"/>
    </fragment>

    <!-- Fragmento de detalle de casa -->
    <fragment
        android:id="@+id/detalleCasaFragment"
        android:name="com.aem.gestionalquileres.fragmentos.detalles.DetalleCasaFragment"
        android:label="Detalle de la Casa"
        tools:layout="@layout/item_casa">
    </fragment>

    <fragment
        android:id="@+id/detalleAlquilerFragment"
        android:name="com.aem.gestionalquileres.fragmentos.detalles.DetalleCasaFragment"
        android:label="Detalle de la Casa"
        tools:layout="@layout/item_casa">
    </fragment>

